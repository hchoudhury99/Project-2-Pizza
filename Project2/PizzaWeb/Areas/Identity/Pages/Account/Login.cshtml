@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<head>
    <link rel="stylesheet" href="~/css/LoginStyle.css" />
</head>



<body>
    <form method="post">
        <div class="login-box">
            <h1>@ViewData["Title"]</h1>
            <div class="textbox">
                <input asp-for="Input.Email" placeholder="Email@Email.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="textbox">           
                <input asp-for="Input.Password" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>       
            <div class="checkbox">
                <label asp-for="Input.RememberMe" style="color: black;">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div> 
                <button type="submit" class="btn">Log in</button>
            </div>
            <div>
                <p><a asp-page="./ForgotPassword">Forgot your password?</a></p>
                <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
            </div>
        </div>
    </form>  
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
