@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<head>
    <link rel="stylesheet" href="~/css/LoginStyle.css" />
</head>


<body>

    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="login-box">
            <h1>@ViewData["Title"]</h1>

            <div class="textbox">
                <input asp-for="Input.Firstname" placeholder="First Name" />
                <span asp-validation-for="Input.Firstname" class="text-danger"></span>
            </div>
            <div class="textbox">
                <input asp-for="Input.Lastname" placeholder="Last Name" />
                <span asp-validation-for="Input.Lastname" class="text-danger"></span>
            </div>
            <div class="textbox">
                <input asp-for="Input.Email" placeholder="Email@Email.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="textbox">
                <input asp-for="Input.Password" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="textbox">
                <input asp-for="Input.ConfirmPassword" placeholder="Comfirm Password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn">Register</button>
        </div>
    </form> 
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
