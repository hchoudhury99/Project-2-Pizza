        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CustomerId" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

<script>
    $('#btn btn-default').click(function (e) {
        var url = "http://localhost:56782/api/customers/" + CustomerId;
        $.ajax({
            url: url,
            dataType: "json",
            //headers: { 'Access-Control-Allow-Origin': 'http://localhost:44350' },
            type: "DELETE",
            contentType: 'application/json; charset=utf-8',
            //data: JSON.stringify({ id: 11 }),
            async: true,
            processData: false,
            cache: false,
            success: function () {
                alert('Success!');
            },
            error: function (xhr) {
                alert('error');
            }
        });
    });
</script>
