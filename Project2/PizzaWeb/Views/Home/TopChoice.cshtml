
@{
    ViewData["Title"] = "TopChoice";
}



    <head>
        <link href="https://fonts.googleapis.com/css?family=Comfortaa&display=swap" rel="stylesheet">
        <style>
            .card {
                border: 1px solid black;
                text-align: center;
                margin-bottom: 30px;
            }

            .card-title {
                color: darkorange;
            }

            .btn-primary {
                color: white;
                background-color: cadetblue;
                border-radius: 8px;
                padding-left: 5px;
                padding-right: 5px;
                text-decoration: none;
            }

                .btn-primary:hover {
                    text-decoration: none;
                }

            body {
                background-image: url(/images/gkgd.jpg);
                background-size: cover;
                text-align: center;
                font-family: 'Comfortaa', cursive;
            }

            .outer {
            }


            .btn-back {
                border: none;
                padding: 10px;
                width: 130%;
                text-transform: uppercase;
                border-radius: 10px;
                cursor: pointer;
                color: #ffffff;
                opacity: 0.8;
                background-size: 180%;
                transition: 0.6s;
                background-image: linear-gradient(to left, #ffc312, #ee5a24, #ffc312, cadetblue);
            }

                .btn-back:hover {
                    text-decoration: none;
                    background-position: right;
                    color: black;
                }
        </style>
    </head>

<body>
    <div class="box">
        <div class="outer">
            <h1>Top Choice</h1>
            @for (int i = 0; i < 5; i++)
            {
                <div class="card" style="width: 18rem; display: inline-block; background-color: white;">
                    <img class="card-img-top" src="~/images/demo.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Pizza Name</h5>
                        <p class="card-text">Some description about this pizza.</p>
                        <a href="#" class="btn btn-primary">Add To Cart</a>
                    </div>
                </div>
            }
        </div>

        <div class="outer">
            @for (int i = 0; i < 5; i++)
            {
                <div class="card" style="width: 18rem; display: inline-block; background-color: white;">
                    <img class="card-img-top" src="~/images/demo.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Pizza Name</h5>
                        <p class="card-text">Some description about this pizza.</p>
                        <a href="#" class="btn btn-primary">Add To Cart</a>
                    </div>
                </div>
            }
        </div>
        <a class="btn-back" asp-action="Index">Go Back</a>
    </div>
</body>