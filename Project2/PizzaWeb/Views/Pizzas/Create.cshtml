@model PizzaAPI.Model.Pizza

@{
    ViewData["Title"] = "Create";
}


<head>
    <link href="https://fonts.googleapis.com/css?family=Comfortaa&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/CreatePage.css" />
    <style>
        body {
            font-family: 'Comfortaa', cursive;
        }

        .box {
            position: fixed;
            top: 15%;
            left: 20%;
        }
    </style>
</head>




<body>
    <div class="box">
        <h2>Create Pizza</h2>
        <form asp-controller="Shoppingcart" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="textbox">
 
                <input asp-for="PizzaName" value=@PizzaName.customPizza placeholder="Custom Pizza" />

                <span asp-validation-for="PizzaName" class="text-danger" ></span>

            </div>

            <div class="textbox">
                <label asp-for="Size" class="control-label"></label>

                <select asp-for="Size">

                    <option value="@Size.ExtraSmall">Extra Small</option>
                    <option value="@Size.Small">Small</option>
                    <option value="@Size.Medium">Medium</option>
                    <option value="@Size.Large">Large</option>
                    <option value="@Size.ExtraLarge">Extra Large</option>

                </select>

                <span asp-validation-for="Size" class="text-danger"></span>

            </div>

            <div class="textbox">
                <label asp-for="Crust" class="control-label"></label>


                <select asp-for="Crust">

                    <option value="@Crust.cheeseCrust">Cheese Crust</option>
                    <option value="@Crust.thickCrust">Thick Crust</option>
                    <option value="@Crust.thinCrust">Thin Crust</option>
                    <option value="@Crust.handtossedCrust">Hand Tossed Crust</option>
                    <option value="@Crust.crunchyCrust">Crunchy Crust</option>
                    <option value="@Crust.brooklynstyleCrust">Brooklyn Style Crust</option>
                    <option value="@Crust.glutenfreeCrust">Gluten Free Crust</option>
                    <option value="@Crust.softNpuffyCrust">softNpuffy Crust</option>

                </select>

                <span asp-validation-for="Crust" class="text-danger"></span>
            </div>

            <div class="textbox">
                <label asp-for="Sauce" class="control-label"></label>


                <select asp-for="Sauce">

                    <option value="@Sauce.garlicSauce"> Garlic Sauce</option>
                    <option value="@Sauce.tomatoeSauce"> Tomato Sauce</option>
                    <option value="@Sauce.pestoSauce"> Pesto Sauce</option>
                    <option value="@Sauce.BechamelSauce"> Bechamel Sauce</option>
                    <option value="@Sauce.SalsaSauce"> Salsa Sauce</option>
                    <option value="@Sauce.BBQSauce"> BBQ Sauce</option>
                    <option value="@Sauce.hummusSauce"> Hummus Sauce</option>
                    <option value="@Sauce.pumpkinSauce"> Pumpkin Sauce</option>
                    <option value="@Sauce.ranchSauce"> Ranch Sauce</option>
                    <option value="@Sauce.wasabiSauce"> Wasabi Sauce</option>

                </select>


                <span asp-validation-for="Sauce" class="text-danger"></span>
            </div>

            <div class="textbox">
                <label asp-for="Topping1" class="control-label"></label>
                <select asp-for="Topping1">

                    <option value="@Topping.beef"> Beef</option>
                    <option value="@Topping.chicken"> Chicken</option>
                    <option value="@Topping.greenpeppers"> Green Pepper</option>
                    <option value="@Topping.onion"> Onion</option>
                    <option value="@Topping.pork"> Pork</option>
                    <option value="@Topping.spinach"> Spinach</option>
                    <option value="@Topping.Mushrooms"> Mushrooms</option>
                    <option value="@Topping.Tomatoes"> Tomatoes</option>
                    <option value="@Topping.Olives"> Olives</option>
                    <option value="@Topping.Pepperoni"> Pepperoni</option>
                    <option value="@Topping.Sausage"> Sausage</option>
                    <option value="@Topping.RedPepper"> Red Pepper</option>
                    <option value="@Topping.Artichokes"> Artichokes</option>
                    <option value="@Topping.Basil"> Basil</option>
                    <option value="@Topping.None"> N/A</option>

                </select>

                <span asp-validation-for="Topping1" class="text-danger"></span>
            </div>

            <div class="textbox">
                <label asp-for="Topping2" class="control-label"></label>
                
                <select asp-for="Topping2">

                    <option value="@Topping.beef"> Beef</option>
                    <option value="@Topping.chicken"> Chicken</option>
                    <option value="@Topping.greenpeppers"> Green Pepper</option>
                    <option value="@Topping.onion"> Onion</option>
                    <option value="@Topping.pork"> Pork</option>
                    <option value="@Topping.spinach"> Spinach</option>
                    <option value="@Topping.Mushrooms"> Mushrooms</option>
                    <option value="@Topping.Tomatoes"> Tomatoes</option>
                    <option value="@Topping.Olives"> Olives</option>
                    <option value="@Topping.Pepperoni"> Pepperoni</option>
                    <option value="@Topping.Sausage"> Sausage</option>
                    <option value="@Topping.RedPepper"> Red Pepper</option>
                    <option value="@Topping.Artichokes"> Artichokes</option>
                    <option value="@Topping.Basil"> Basil</option>
                    <option value="@Topping.None"> N/A</option>

                </select>

                <span asp-validation-for="Topping2" class="text-danger"></span>
            </div>

            <div class="textbox">
                <label asp-for="Topping3" class="control-label"></label>
                <select asp-for="Topping3">

                    <option value="@Topping.beef"> Beef</option>
                    <option value="@Topping.chicken"> Chicken</option>
                    <option value="@Topping.greenpeppers"> Green Pepper</option>
                    <option value="@Topping.onion"> Onion</option>
                    <option value="@Topping.pork"> Pork</option>
                    <option value="@Topping.spinach"> Spinach</option>
                    <option value="@Topping.Mushrooms"> Mushrooms</option>
                    <option value="@Topping.Tomatoes"> Tomatoes</option>
                    <option value="@Topping.Olives"> Olives</option>
                    <option value="@Topping.Pepperoni"> Pepperoni</option>
                    <option value="@Topping.Sausage"> Sausage</option>
                    <option value="@Topping.RedPepper"> Red Pepper</option>
                    <option value="@Topping.Artichokes"> Artichokes</option>
                    <option value="@Topping.Basil"> Basil</option>
                    <option value="@Topping.None"> N/A</option>

                </select>

                <span asp-validation-for="Topping3" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn" />
            </div>
        </form>
        <a asp-action="Index">Back to List</a>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}