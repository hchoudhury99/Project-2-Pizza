@model IEnumerable<PizzaAPI.Model.Pizza>

@{
    ViewData["Title"] = "Index";
}

    <head>
        <link href="https://fonts.googleapis.com/css?family=Comfortaa&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="~/css/Table.css" />
        <style>

            body {
                font-family: 'Comfortaa', cursive;
            }
        </style>
    </head>




<body>

<h2>Pizza</h2>
<br />
<a class="btn" asp-action="Create">Create New</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PizzaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Crust)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sauce)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topping1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topping2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topping3)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Crust)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sauce)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topping1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topping2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topping3)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PizzaId">Update</a> |
                <a asp-action="Details" asp-route-id="@item.PizzaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PizzaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


</body>